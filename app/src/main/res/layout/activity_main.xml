<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494848"
    android:padding="20dp"
    tools:context="com.example.toshiba.demo.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Already exist an account ?"
         android:textColor="#fff"
         android:textStyle="bold"
         android:textSize="20dp"
         android:layout_marginTop="100dp"
         android:id="@+id/already_id"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/already_id"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_firstid"
        >
     <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/user"
         />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a username"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/user_editText"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_firstid"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_secondid"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/password_editText" />
    </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear_secondid"
    android:layout_marginTop="30dp"
    android:background="@drawable/gradient"
    android:text="Login"
    android:textStyle="bold"
    android:textSize="20dp"
    android:padding="20dp"
    android:id="@+id/buuton_id"
    />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buuton_id"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:id="@+id/checkbox_id"
            android:onClick="Login"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remenber me"
            android:background="#fff"
            android:layout_toRightOf="@id/checkbox_id"
            android:layout_below="@id/buuton_id"
            android:layout_margin="20dp"
            android:padding="10dp"/>

    </RelativeLayout>

</ScrollView>
    </RelativeLayout>



